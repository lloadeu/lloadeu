---
import { cn } from "@/lib/utils";

interface Props {
  href?: string;
  class?: string;
}

const { href = "#", class: className } = Astro.props;
---

<li>
  <a
    class={cn(
      "flex gap-4 hover:text-text-hover-dark items-center py-3 px-5 font-medium transition duration-300",
      className
    )}
    href={href}
  >
    <slot />
  </a>
</li>
